<!DOCTYPE html>
<html>
  <head>
    <title>Odinbook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
  <div class = 'navbar-brand'>
    <div class = 'navbar-item'>
      <b>Odinbook!</b>
    </div>
  </div>
  <div class="navbar-end">
    <div class="navbar-item">
      <div class="buttons">
        <% if current_user %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button is-link' %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: 'button is-link' %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
<div class = 'columns'>
  <div class = 'column is-narrow'>
    Left Column: logged in users profile space
  </div>
  <div class = 'column'>
      <%= yield %>
  </div>

  <div class = 'column is-narrow'>
  <% if current_user %>
   <%= render "users/friends_list" %>
  <% else %>
    Right Column: notifications area
  <% end %>
  </div>
</div>
  </body>
</html>
